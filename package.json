{
	"name": "vite-plugin-tailwind-purgecss",
	"version": "0.3.0",
	"description": "Vite plugin for PurgeCSS",
	"module": "dist/index.js",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"repository": {
		"url": "https://github.com/AdrianGonz97/vite-plugin-tailwind-purgecss",
		"type": "git"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"lint": "tsc",
		"release": "pnpm run build && changeset publish",
		"format": "prettier --write \"./src/**/*.{ts,svelte}\""
	},
	"keywords": [
		"purgeCSS",
		"sveltekit",
		"svelte",
		"rollup",
		"tailwind",
		"tailwindcss",
		"vite",
		"vite-plugin",
		"skeleton"
	],
	"author": "AdrianGonz97",
	"license": "MIT",
	"dependencies": {
		"chalk": "^5.3.0",
		"css-tree": "^2.3.1",
		"estree-walker": "^3.0.3",
		"fast-glob": "^3.3.2",
		"purgecss": "^6.0.0",
		"purgecss-from-html": "^6.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.2",
		"@types/css-tree": "^2.3.7",
		"@types/estree": "^1.0.5",
		"@types/node": "^18.11.18",
		"prettier": "^2.8.1",
		"tailwindcss": "^3.3.5",
		"tsup": "^6.5.0",
		"typescript": "^4.9.4",
		"vite": "^5.0.0"
	},
	"files": [
		"dist"
	],
	"peerDependencies": {
		"tailwindcss": "^3.3.0",
		"vite": "^4.1.1 || ^5.0.0"
	}
}
